extends ../layout/default

block title 
  title File upload
    
block pageContent
  .page.page_dark
    .container
      .dropzone
        form.dropzone__box
          h2.dropzone__title Upload file
          p.dropzone__text Click to upload or drag and drop 
          .dropzone__area
            .file-upload-icon
              svg
                use(href="#upload")
            input(type="file" multiple required id="upload-file" name="uploaded-file" accept="image/")
            .dropzone__file-info 
              p No Files Selected
          .dropzone__description 
            span Max file size: 25MB
          .dropzone__actions 
            .dropzone__help 
              svg(width="16" height="16")
                use(href="#info-circle")
              span Help Center
            div.dropzone__actions-buttons
              button(type="reset") Cancel 
              button(id="submit-button" type="submit") Save
